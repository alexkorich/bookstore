%div{style:'float:left; width:33.3%'} 
  %h3 Credit card
  =form_for :credit_card, url: wizard_path, method: :put do |f|
    %p
      =f.number_field :number, placeholder: "Card number"
    %p
      Expiration date:
    =f.select :expiration_month, 01..12
    =f.select :expiration_year, 15..20
    %p
      =f.text_field :firstname, placeholder: "First name" 
    %p
      =f.text_field :lastname, placeholder: "Last name"
    %P  
      =f.number_field :cvv, placeholder: "CVV"
    =f.submit "Save and contunue"
%div{style:'float:right; width:33.3%; height:100%'}
  %h3 Order summary 
  =@order.total_price

<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to 'Show', book %></td>
       <%= book.title %>
       <%= book.price %>
       <%= button_to "Add to Cart", books_add_to_cart_path(id:book.id), :method => :post %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

- @books.each do |book|
  .book-container
    = image_tag  book.cover.thumb
    = link_to book.title, book
    = "$"+book.price.to_s
    = simple_form_for :book , url: home_add_to_cart_path, method: 'post' do |f|
      =f.input :id, as: :hidden , input_html: { value: book.id }
      = f.input :quantity, as: :integer, :input_html => { :value => 1}, required: false, label: false
      = f.submit "Add to Cart", class:"btn btn-warning"
%br
= render 'home/categories'
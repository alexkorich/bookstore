%div{style:"max-width:150px; position: absolute; width: 100%;  padding: 24px 16px; top: 0; left: 60%; bottom:0; border-left: solid 1px #d7d7d7; overflow-x: hidden;overflow-y: auto;width: 100%; box-sizing: border-box;"  }
  = render 'home/categories' 
  / - bestsellers.each do |book|
  /   = book.title 
  /   = book.price  
  /   = image_tag book.cover.thumb 
.carousel.slide#carousel-example-generic{"data-ride": "carousel", "style" =>"max-width: 490px"}
  %div.carousel-inner{"role": "listbox"}
    - bestsellers.each_with_index do |book, index|
      -if index==0
        %div.item.active
         
          = book.title 
          = book.price  
          = image_tag book.cover.thumb 
      -else  
        %div.item
          = book.title 
          = book.price  
          = image_tag book.cover.thumb 
    %a.left.carousel-control{"data-slide" => "prev", :href => "#carousel-example-generic", :role => "button"}
    %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
    %span.sr-only Previous
  %a.right.carousel-control{"data-slide" => "next", :href => "#carousel-example-generic", :role => "button"}
    %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
    %span.sr-only Next
    %span.glyphicon.glyphicon-chevron-right{"aria-hidden": "true"}
  %span.sr-only Next
